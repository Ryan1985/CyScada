@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/Login.css" rel="stylesheet" />
    <style>
       
    </style>
</head>
<body>
    <div class="login">
        <h1>欢迎登录</h1>
        <form method="post">
            <input type="text" name="UserName" placeholder="请输入用户名" required="required" />
            <input type="password" name="Password" placeholder="请输入密码" required="required" />
            <button type="submit" class="btn btn-primary btn-block btn-large">登录</button>
            <span style="color:red">@ViewBag.ErrorInfo</span>
            <h4 style="color:white;font-weight:normal"><span style="margin-right:0.5rem;">账号:</span><span style="margin-right:2rem;">demo</span><span style="margin-right:0.5rem;">密码:</span><span>123456</span></h4>
            
        </form>
    </div>
</body>
</html>
